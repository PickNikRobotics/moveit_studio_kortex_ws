<mujoco model="kinova scene">
    <include file="gen3_7dof_mujoco.xml"/>
    <option gravity="0 0 0"/>
    <option>
        <flag multiccd="enable"/>
    </option>
    <option integrator="implicit"/>
    <statistic center="0.3 0 0.4" extent="1"/>
    <default>
        <geom solref=".004 1"/>
    </default>

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <global azimuth="120" elevation="-20"/>
    </visual>

    <asset>
        <texture type="2d" name="april_tag" file="assets/black_white.png" width="32" height="32"/>
        <texture type="skybox" file="assets/space.png" gridsize="3 4" gridlayout=".U..LFRB.D.."/>
        <texture type="2d" name="wood" file="assets/wood.png" width="896" height="896"/>
        <material name="landsat_gold" rgba="1.0 0.85 0.6  1" reflectance="0.2"/>
    </asset>

    <worldbody>
        <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
        <camera name="scene_camera" pos="0.0 0.3 0.55" fovy="58" mode="fixed" resolution="640 480"
                quat="0.365715 0.232986 -0.484157 -0.759975"/>
        <site name="scene_camera_optical_frame" pos="0.0 0.3 0.55" quat="0.365715 0.232986 -0.484157 -0.759975"
              size="0.03"/>
    </worldbody>

    <asset>
        <mesh name="landsat" file="landsat.obj"/>
        <mesh name="landsat_white" file="landsat_white.obj"/>
        <mesh name="satellite" file="satellite.obj"/>
    </asset>

    <worldbody>
        <body name="landsat" pos="5 5 5" quat="0 0 0 1">
            <geom type="mesh" material="landsat_gold" mesh="landsat" density="200"/>
            <geom type="mesh" rgba="1.0 1.0 1.0 1" mesh="landsat_white" density="200"/>
            <freejoint/>
        </body>

    </worldbody>
</mujoco>
